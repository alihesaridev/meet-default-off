{
  "name": "Meet Default Off",
  "description": "Automatically blocks camera and microphone by default on Google Meet.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["contentSettings", "storage", "tabs"],
  "icons": {
    "128": "icon-128.png"
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meet Default Off Settings",
    "default_icon": {
      "128": "icon-128.png"
    }
  }
}
